{% extends 'base.html.twig' %}

{% block title %}Créer un compte{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow border-0">
                <div class="card-body p-4">
                    <h1 class="h4 text-center mb-4">Créer un compte</h1>

                    {{ form_start(registrationForm) }}

                    <div class="form-floating mb-3">
                        {{ form_widget(registrationForm.nom, {'attr': {'placeholder': 'Nom', 'class': 'form-control'}}) }}
                        <label for="{{ registrationForm.nom.vars.id }}">Nom</label>
                        {{ form_errors(registrationForm.nom) }}
                    </div>

                    <div class="form-floating mb-3">
                        {{ form_widget(registrationForm.prenom, {'attr': {'placeholder': 'Prénom', 'class': 'form-control'}}) }}
                        <label for="{{ registrationForm.prenom.vars.id }}">Prénom</label>
                        {{ form_errors(registrationForm.prenom) }}
                    </div>

                    <div class="form-floating mb-3">
                        {{ form_widget(registrationForm.email, {'attr': {'placeholder': 'Email', 'class': 'form-control'}}) }}
                        <label for="{{ registrationForm.email.vars.id }}">Email</label>
                        {{ form_errors(registrationForm.email) }}
                    </div>

                    <div class="form-floating mb-3">
                        {{ form_widget(registrationForm.identifiant, {'attr': {'placeholder': 'Identifiant', 'class': 'form-control'}}) }}
                        <label for="{{ registrationForm.identifiant.vars.id }}">Identifiant</label>
                        {{ form_errors(registrationForm.identifiant) }}
                    </div>

                    <div class="form-floating mb-4">
                        {{ form_widget(registrationForm.plainPassword, {'attr': {'placeholder': 'Mot de passe', 'class': 'form-control'}}) }}
                        <label for="{{ registrationForm.plainPassword.vars.id }}">Mot de passe</label>
                        {{ form_errors(registrationForm.plainPassword) }}
                    </div>

                    <button type="submit" class="btn btn-success w-100">Créer mon compte</button>

                    {{ form_end(registrationForm) }}

                    <div class="text-center mt-3">
                        <span>Déjà inscrit ?</span>
                        <a href="{{ path('app_login') }}" class="btn btn-link">Se connecter</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
